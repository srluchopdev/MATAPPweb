@model YourNamespace.Models.ColliderMotorViewModel

<h2>Asignar Colliders a Motores</h2>

<form asp-action="AssignColliders">
    @for (int i = 0; i < Model.Colliders.Count; i++)
    {
        <div>
            <label>@Model.Colliders[i].Name</label>
            <select asp-for="Colliders[i].MotorIP">
                @foreach (var ip in Model.AvailableIPs)
                {
                    <option value="@ip">@ip</option>
                }
            </select>
        </div>
    }
    <button type="submit">Guardar Asignaciones</button>
</form>
